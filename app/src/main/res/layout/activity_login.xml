<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity"
    android:background="@drawable/gradback">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/logintxt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="LOGIN HERE "
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logintxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/roundedwhite">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/loginid"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/roundedredborder"
            android:gravity="center"
            android:hint="ENTER EMAIL-ID"
            android:inputType="textNoSuggestions"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#80980303"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/loginpass"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/loginid"
            android:layout_marginTop="24dp"
            android:background="@drawable/roundedredborder"
            android:gravity="center"
            android:hint="ENTER PASSWORD"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#80980303"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbttn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/loginpass"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/loginbtnback"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/log2reg"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Not registered yet?"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forgetpass"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="forget Password?"
            android:textColor="#B3F3F0F0"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>