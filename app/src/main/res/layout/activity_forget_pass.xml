<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity"
    android:background="@drawable/gradback">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forgottxt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="FORGOT PASSWORD"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgottxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/roundedwhite">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/forgotemailid"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/roundedredborder"
            android:gravity="center"
            android:hint="ENTER EMAIL-ID"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#80980303"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ftv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotemailid"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="CHECK YOUR EMAIL FOR RESET THE PASSWORD "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resetbttn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/tvv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/loginbtnback"
            android:text="Reset Password"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />


        <LinearLayout
            android:id="@+id/forg2log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/circleback"
            android:orientation="vertical"
            android:layout_below="@+id/ftv"
            android:padding="15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">


            <TextView
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/loginarrow"
                android:textSize="25dp" />

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>