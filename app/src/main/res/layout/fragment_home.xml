<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E5">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CatrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/roundedwhite"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:padding="2dp"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/Addnotification"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/CatrecyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/roundedwhite"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:text="Add your Notification" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Homenotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Addnotification"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="2dp">

    </androidx.recyclerview.widget.RecyclerView>




</RelativeLayout>